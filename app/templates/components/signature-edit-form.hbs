<div class="row">
  <div class="columns small-4">

    <label>
      <span>Character</span>
      {{input type="text" value=signature.characterName}}
    </label>

  </div>
  <div class="columns small-8">

    <label>
      <span>Message</span>
      {{input type="text" value=signature.message}}
    </label>

  </div>
</div>

<div class="row">

  <fieldset class="small-6 columns">
    <legend>Background</legend>

    {{#each backgrounds as |background|}}
      {{#radio-button
        value=background.id
        name="background"
        groupValue=currentBackgroundId
        changed="backgroundChanged"
      }}
        <img src="{{background.image}}" alt="Background #{{background.id}}"/>
      {{/radio-button}}
    {{/each}}
  </fieldset>

</div>